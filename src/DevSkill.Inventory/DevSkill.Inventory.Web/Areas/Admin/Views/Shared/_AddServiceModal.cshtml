@model DevSkill.Inventory.Web.Areas.Admin.Models.ServiceCreateModel
<div class="modal fade" id="addServiceModal" tabindex="-1" role="dialog" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addServiceModalLabel">Create New Service</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="addServiceForm" action="/Admin/Service/Create" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="serviceName">Service Name*</label>
                        <input type="text" class="form-control" id="serviceName" name="ServiceName" required>
                    </div>

                    <div class="form-group">
                        <label for="TaxCategoryId">Tax Category</label>

                        <select asp-for="TaxCategoryId" asp-items="Model.TaxCategories" class="form-control">
                            <option value="">-- Select Tax Category --</option>
                        </select>
                    </div>



                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isPurchased" name="IsPurchased">
                                <label class="form-check-label" for="isPurchased">Do you purchase this item?</label>
                            </div>

                            <div class="form-group">
                                <label for="buyingPrice">Buying Price*</label>
                                <input type="number" class="form-control" id="buyingPrice" name="BuyingPrice" min="0" value="0">
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isBuyingPriceInclusive" name="IsBuyingPriceInclusive">
                                <label class="form-check-label" for="isBuyingPriceInclusive">Is Buying Price Tax Inclusive?</label>
                            </div>

                            <div class="form-group">
                                <label for="buyingPriceTaxed">Buying Price + Tax(৳)*</label>
                                <input type="number" class="form-control" id="buyingPriceTaxed" name="BuyingPriceTaxed" min="0" value="0" readonly>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isSold" name="IsSold">
                                <label class="form-check-label" for="isSold">Do you sell this item?</label>
                            </div>

                            <div class="form-group">
                                <label for="sellingPrice">Selling Price*</label>
                                <input type="number" class="form-control" id="sellingPrice" name="SellingPrice" min="0" value="0">
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isSellingPriceInclusive" name="IsSellingPriceInclusive">
                                <label class="form-check-label" for="isSellingPriceInclusive">Is Selling Price Tax Inclusive?</label>
                            </div>

                            <div class="form-group">
                                <label for="sellingPriceTaxed">Selling Price + Tax(৳)*</label>
                                <input type="number" class="form-control" id="sellingPriceTaxed" name="SellingPriceTaxed" min="0" value="0" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="Description" rows="3"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
