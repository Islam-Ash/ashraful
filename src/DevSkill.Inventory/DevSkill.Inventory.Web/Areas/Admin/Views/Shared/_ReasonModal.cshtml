@{
    ViewBag.Title = "Create Stock Adjustment";
}

<div class="container">
    <h4>Create Stock Adjustment</h4>

    <form asp-action="CreateStockAdjustment" method="post">
        <div class="form-row align-items-center mb-3">
            <!-- Date -->
            <div class="col-md-3">
                <label for="Date" class="form-label">Date</label>
                <div class="input-group">
                    <input type="date" class="form-control" id="Date" name="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="fas fa-calendar-alt"></i>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Reason Dropdown -->
            <div class="col-md-3">
                <label for="Reason" class="form-label">Reason</label>
                <div class="d-flex">
                    <select class="form-control" id="Reason" name="Reason">
                        <option value="">Select Reason</option>
                        <option value="Inventory Adjustment">Inventory Adjustment</option>
                        <option value="Damage">Damage</option>
                    </select>
                    <button type="button" class="btn btn-info ml-2" data-bs-toggle="modal" data-bs-target="#addReasonModal">
                        +Add
                    </button>
                </div>
            </div>

            <!-- Warehouse Dropdown -->
            <div class="col-md-3">
                <label for="Warehouse" class="form-label">Warehouse</label>
                <select class="form-control" id="Warehouse" name="Warehouse">
                    <option value="">Select Warehouse</option>
                    <option value="Main">Main</option>
                    <option value="Warehouse1">Warehouse1</option>
                </select>
            </div>
        </div>

        <!-- Adjustment Table (Initially Hidden) -->
        <div id="adjustmentTable" class="mt-4" style="display:none;">
            <table class="table table-bordered">
                <thead class="table-info">
                    <tr>
                        <th>Item</th>
                        <th>Available Stock In Hand</th>
                        <th>New Stock In Hand</th>
                        <th>Adjusted Quantity</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="adjustmentTableBody">
                    <!-- Sample Row -->
                    <tr>
                        <td>
                            <input type="text" class="form-control" name="ItemName[]" placeholder="Enter item name" />
                        </td>
                        <td>4544 pcs</td>
                        <td>
                            <input type="number" class="form-control" name="NewStockInHand[]" placeholder="New stock" />
                        </td>
                        <td>
                            <input type="number" class="form-control" name="AdjustedQuantity[]" placeholder="Adjusted quantity" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm remove-row">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button type="button" id="addItemButton" class="btn btn-secondary">+ Add Item</button>
        </div>

        <!-- Note Text Area -->
        <div class="form-group mt-4">
            <label for="Note" class="form-label">Note</label>
            <textarea class="form-control" id="Note" name="Note" rows="3" placeholder="Enter additional notes..."></textarea>
        </div>

        <!-- Save and Cancel Buttons -->
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index", "StockAdjustment")" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</div>

<!-- Add Reason Modal -->
<div class="modal fade" id="addReasonModal" tabindex="-1" aria-labelledby="addReasonModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title" id="addReasonModalLabel">Create a new Reason</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addReasonForm" asp-antiforgery="true" method="post" action="/Admin/Reason/Create">
                    <div class="form-group">
                        <label for="Name">Name<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-info">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript/jQuery to show table after selecting a warehouse and adding/removing items -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        // Show the adjustment table when a warehouse is selected
        $('#Warehouse').change(function () {
            if ($(this).val()) {
                $('#adjustmentTable').show();
            } else {
                $('#adjustmentTable').hide();
            }
        });

        // Add new row to the adjustment table
        $('#addItemButton').click(function () {
            $('#adjustmentTableBody').append(`
                    <tr>
                        <td><input type="text" class="form-control" name="ItemName[]" placeholder="Enter item name" /></td>
                        <td>4544 pcs</td>
                        <td><input type="number" class="form-control" name="NewStockInHand[]" placeholder="New stock" /></td>
                        <td><input type="number" class="form-control" name="AdjustedQuantity[]" placeholder="Adjusted quantity" /></td>
                        <td><button type="button" class="btn btn-danger btn-sm remove-row">Delete</button></td>
                    </tr>
                `);
        });

        // Remove row from the adjustment table
        $(document).on('click', '.remove-row', function () {
            $(this).closest('tr').remove();
        });
    });
</script>
